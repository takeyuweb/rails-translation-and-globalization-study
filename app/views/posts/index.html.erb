<p id="notice"><%= notice %></p>

<h1><%=t 'label.post.list' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'label.post.title' %></th>
      <th><%= t 'label.post.text' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text.to_s.truncate(20) %></td>
        <td><%= link_to t('label.post.show'), post %></td>
        <td><%= link_to t('label.post.edit'), edit_post_path(post) %></td>
        <td><%= link_to t('label.post.destroy'),
                        post,
                        method: :delete,
                        data: { confirm: t('confirm_destroy_message') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('label.post.new'), new_post_path %>
